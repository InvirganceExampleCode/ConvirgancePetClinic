<?xml version="1.0" encoding="UTF-8"?>
<RoutedService>
    <routes>
        <map>
            <entry>
                <string>/views/owner</string>
                <HypermediaService>
                    <parameters>
                        <list>
                            <PathVariable>
                                <path>/views/owner/{id}</path>
                            </PathVariable>
                        </list>
                    </parameters>
                    <page>/WEB-INF/components/owner/view.jsp</page>
                    <verbs>
                        <list>
                            <verb>
                                <name>create</name>
                                <page>/WEB-INF/components/owner/create_edit.jsp</page>
                                <service>/services/owner/{id}</service>
                                <method>POST</method>
                                <redirect>/views/owner/{id}</redirect>
                            </verb>
                            <verb>
                                <name>edit</name>
                                <page>/WEB-INF/components/owner/create_edit.jsp</page>
                                <service>/services/owner/{id}</service>
                                <method>PUT</method>
                            </verb>
                        </list>
                    </verbs>
                </HypermediaService>
            </entry>
            <entry>
                <string>/views/owner/*/pet</string>
                <HypermediaService>
                    <parameters>
                        <list>
                            <PathVariable>
                                <path>/views/owner/*/pet/{id}</path>
                            </PathVariable>
                            <PathVariable>
                                <path>/views/owner/{ownerId}/pet/*</path>
                            </PathVariable>
                        </list>
                    </parameters>
                    <verbs>
                        <list>
                            <verb>
                                <name>create</name>
                                <page>/WEB-INF/components/owner/pet/create_edit.jsp</page>
                                <service>/services/owner/{ownerId}/pet/{id}</service>
                                <method>POST</method>
                                <redirect>/views/owner/{ownerId}</redirect>
                            </verb>
                            <verb>
                                <name>edit</name>
                                <page>/WEB-INF/components/owner/pet/create_edit.jsp</page>
                                <service>/services/owner/{ownerId}/pet/{id}</service>
                                <method>PUT</method>
                                <redirect>/views/owner/{ownerId}</redirect>
                            </verb>
                        </list>
                    </verbs>
                </HypermediaService>
            </entry>
            <entry>
                <string>/views/owner/*/pet/*/visit</string>
                <HypermediaService>
                    <parameters>
                        <list>
                            <PathVariable>
                                <path>/views/owner/*/pet/{id}</path>
                            </PathVariable>
                            <PathVariable>
                                <path>/views/owner/{ownerId}/pet/*</path>
                            </PathVariable>
                        </list>
                    </parameters>
                    <verbs>
                        <list>
                            <verb>
                                <name>create</name>
                                <page>/WEB-INF/components/owner/pet/visit/create.jsp</page>
                                <service>/services/owner/{ownerId}/pet/{id}/visit</service>
                                <method>POST</method>
                                <redirect>/views/owner/{ownerId}</redirect>
                            </verb>
                        </list>
                    </verbs>
                </HypermediaService>
            </entry>
        </map>
    </routes>
</RoutedService>
